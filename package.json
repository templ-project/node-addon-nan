{
  "name": "templ-project-nodejs-addon-nan",
  "version": "0.0.1",
  "description": "NodeJs Addon Project Template using NAN",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:cpp && npm run build:js",
    "build:cpp": "npx node-gyp configure && npx node-gyp build",
    "build:js": "rollup -c --environment NODE_ENV:production",
    "clean": "rimraf coverage build dist",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "docs": "npx typedoc --out docs --json docs.json --readme none --theme minimal --mode file src",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run depcruise && npm run test",
    "inspector": "jsinspector server --port 9543",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint -- --fix",
    "postinstall": "node ./.scripts/install-prettier-cpp.js",
    "prebuild": "npm run clean",
    "predocs": "rimraf docs",
    "prerelease": "npm run build",
    "pretest": "npm run clean && npm run build:cpp",
    "prettier": "npm run prettier:cpp && npm run prettier:js",
    "prettier:check": "npm run prettier:cpp:check && npm run prettier:js:check",
    "prettier:cpp": "npx prettier-cpp",
    "prettier:cpp:check": "npm run prettier:cpp -- -dry-run",
    "prettier:cpp:write": "npm run prettier:cpp -- -i",
    "prettier:js": "prettier ./{src,test}/**/*.ts",
    "prettier:js:check": "npm run prettier:js -- --list-different",
    "prettier:js:write": "npm run prettier:js -- --write",
    "prettier:write": "npm run prettier:cpp:write && npm run prettier:js:write",
    "release": "release-it --ci --no-npm.publish",
    "test": "npm run test:single -- 'test/**/*.test.ts'",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha --forbid-only",
    "test:watch": "nodemon --exec 'npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscirjan/template-javascript.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dragoscirjan/template-javascript/issues"
  },
  "homepage": "https://github.com/dragoscirjan/template-javascript#readme",
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/bindings": "^1.3.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "copy": "^0.3.2",
    "dependency-cruiser": "^9.8.1",
    "eslint": "^7.4.0",
    "eslint-plugin-mocha": "^7.0.1",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^8.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "release-it": "^13.6.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.20.0",
    "rollup-plugin-dts": "^1.4.7",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.7",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V ",
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  }
}
